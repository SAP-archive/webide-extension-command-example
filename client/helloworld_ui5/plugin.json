{
  "name": "sap.webide.example.ui5.plugin",
  "description": "This is a sample plugin that demonstrates use of ui5",
  "i18n": "sap.webide.example.ui5.plugin/i18n/i18n",
  "requires": {
    "services": [
      "command",
      "commandGroup"
    ]
  },
  "provides": {
    "services": {
      "ui5sample": {
        "implements": "sap.webide.example.ui5.plugin.service.UI5Sample",
        "module": "sap.webide.example.ui5.plugin/service/UI5Sample"
      }
    },

    "interfaces": {
      "sap.webide.example.ui5.plugin.service.UI5Sample": "sap.webide.example.ui5.plugin/service/UI5Sample"
    }
  },
  "configures": {
    "services": {
      "command:commands": [{
        "id": "sap.webide.example.ui5.plugin.helloWorldView",
        "label": "{i18n>command_helloWorldView}",
        "service": "sap.webide.example.ui5.plugin/command/HelloWorldView",
        "available" : true,
        "enabled" : true
      }],

      "commandGroup:groups": [{
        "id": "tools.ui5sample",
        "label": "{i18n>commandgroup_sample}"
      }, {
        "id": "tools.ui5sample.helloWorldView"
      }],

      "commandGroup:items": [{
        "parent": "tools",
        "type": "menu",
        "group": "tools.ui5sample",
        "prio": 100
      }, {
        "parent": "tools.ui5sample",
        "type": "inline",
        "group": "tools.ui5sample.helloWorldView",
        "prio": 10
      }, {
        "parent": "tools.ui5sample.helloWorldView",
        "type": "action",
        "command": "sap.webide.example.ui5.plugin.helloWorldView",
        "prio": 10
      }]
    }
  }
}